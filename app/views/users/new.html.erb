<%= render 'shared/error_messages' %>
<div class='account-page black_color' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
      <p><%= link_to "Log in", login_path %></p>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_for(@user) do |f| %>
      <div class='field'>
        <div class='field-label'>
          <%= f.label :name %>
        </div>
        <div class='field-input'>
          <%= f.text_field :name %>
        </div>
      </div>
      <div class='field'>
        <div class='field-label'>
          <%= f.label :login_id, "User ID" %>
        </div>
        <div class='field-input'>
          <%= f.text_field :login_id %>
        </div>
      </div>
      <div class='field'>
        <div class='field-label'>
          <%= f.label :password %>
        </div>
        <div class='field-input'>
          <%= f.password_field :password %> 
        </div>
      </div>
      <div class='field'>
        <div class='field-label'>
          <%= f.label :password_confirmation, "Confirmation" %>
        </div>
        <div class='field-input'>
          <%= f.password_field :password_confirmation %>
        </div>
        <div class='actions'>
          <%= f.submit 'Create Account', class: 'btn'%>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>