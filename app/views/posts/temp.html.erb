<h1>Ajax#index</h1>
<p id="hoge">赤色になるよ</p>
<% @posts.each do |post|%>
<div>
  <%= post.content%>
  <%= button_to 'destroy', {:controller => "posts", :action => "cheer", :user_id => post.user.id, :post_id=> post.id} , :method=>:post, class: "js-modal-open"  %>
  <div class="modal js-modal">
    <div class="modal__bg js-modal-close"></div>
    <div class="modal__content">
      <%= image_tag "cheer.gif", alt: "Rails icon", id: "public", class: "image", width: "100%" %>
    </div>
  </div>
</div>
<% end %>

<script>
$(function () {
  $('.js-modal-open').on('click', function () {
    $('.js-modal').fadeIn();
    return false;
  });
  $('.js-modal-close').on('click', function () {
    $('.js-modal').fadeOut();
    return false;
  });
});
</script>