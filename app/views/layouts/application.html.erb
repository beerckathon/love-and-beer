<!DOCTYPE html>
<html>

<head>
  <title>LoveAndBeer</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header class="container-fluid absoluted-top bg-danger py-1 px-5">
    <div class="row">
      <div class="col-md-12 bg-beer">
        <div class="header-content">
            <div class="header-logo text-white">
                <h1 class="header-logo">delta</h1>
            </div>
            <div class="navigation"></div>
        </div>
      </div>
    </div>
  </header>
  <% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>
  <%= yield %>
  <footer class="container-fluid bg-danger bottom py-3">
      <div class="row">
          <div class="col-md-12 text-center text-white bg-beer footer">
              <p>Copyright Â© 2019 delta All rights reserved.</p>
          </div>
      </div>
  </footer>
</body>

</html>